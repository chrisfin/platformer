<h1>Charges</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Acount</th>
      <th>Stripe ID</th>
      <th>Application fee</th>
      <th>Transfer data amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @charges.each do |charge| %>
      <tr>
        <td><%= charge.id %></td>
        <td><%= charge.amount %></td>
        <td><%= charge.stripe_charge_id %></td>
        <td><%= charge.application_fee_amount %></td>
        <td><%= charge.transfer_data_amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>